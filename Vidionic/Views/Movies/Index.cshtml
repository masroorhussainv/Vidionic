@model IEnumerable<Vidionic.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (Model.Count == 0)
{
    <p>There are no movies available.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
           <th>Movie Name</th>
        </tr> 
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Name</td>
                </tr>
            }
        </tbody>
    </table>
}